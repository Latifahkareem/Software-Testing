{
  "info": {
    "name": "GoRest API Homework",
    "_postman_id": "gorest-hw-001",
    "description": "Homework 1: Create/Get/Update/Delete user on GoRest API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "token", "value": "<YOUR_TOKEN_HERE>" },
    { "key": "userId", "value": "" },
    { "key": "randomInt", "value": "1234" }
  ],
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"gender\": \"male\",\n  \"email\": \"testuser{{randomInt}}@example.com\",\n  \"status\": \"active\"\n}"
        },
        "url": { "raw": "https://gorest.co.in/public/v2/users", "protocol": "https", "host": ["gorest","co","in"], "path": ["public","v2","users"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.collectionVariables.set('userId', jsonData.id);",
              "pm.test('Status code is 201', function() { pm.response.to.have.status(201); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Get User",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "https://gorest.co.in/public/v2/users/{{userId}}", "protocol": "https", "host": ["gorest","co","in"], "path": ["public","v2","users","{{userId}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.test('User name is correct', function() { pm.expect(jsonData.name).to.eql('Test User'); });",
              "pm.test('Status code is 200', function() { pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated User\",\n  \"status\": \"inactive\"\n}" },
        "url": { "raw": "https://gorest.co.in/public/v2/users/{{userId}}", "protocol": "https", "host": ["gorest","co","in"], "path": ["public","v2","users","{{userId}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.test('Name updated successfully', function() { pm.expect(jsonData.name).to.eql('Updated User'); });",
              "pm.test('Status code is 200', function() { pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "https://gorest.co.in/public/v2/users/{{userId}}", "protocol": "https", "host": ["gorest","co","in"], "path": ["public","v2","users","{{userId}}"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 204', function() { pm.response.to.have.status(204); });"
            ]
          }
        }
      ]
    }
  ]
}
